.LoginView
  padding 30px
  color #fff
  font-size 14px
  .errors
    background #c12424
    padding 20px
    color #fff
    margin 0 auto 30px auto
    li
      margin 0 0 0 15px
      padding 0

  label
    display block
    text-transform uppercase
    font-size 11px
    letter-spacing 1px
    color rgba(255,255,255,0.8)
    margin 0 0 5px 0

  input
    display block
    font-size 24px
    line-height 150%
    margin 0 0 20px 0
    padding 5px 10px
    width 60%
    height 50px
    min-width 300px
    border none
    color #fff
    background rgba(255,255,255,0.1)

  .submit
    position relative
    width 60%
    min-width 300px
    height 50px

    input[type=submit]
      text-transform uppercase
      font-size 18px
      line-height 150%
      width 100%
      height 100%
      font-weight bold
      display block
      color #000
      background #90e241
      position relative

