@import 'nib'

.EditPostView
  color: #fff
  font-size: 14px
  padding: 20px 0 0 0

  .container
    margin: 0 auto
    width: 80%
    max-width: 800px

  button
    margin: 0 0 15px

  label
    display: block
    text-transform: uppercase
    font-size: 11px
    letter-spacing: 1px
    color: rgba(255,255,255,0.8)
    margin: 0 0 5px 0

  .CodeMirror
    margin: 0 0 15px
    width: 60%
    min-width: 300px

.EditPostView select,
.EditPostView input
  display: block
  font-size: 24px
  line-height: 150%
  margin: 0 0 20px 0
  padding: 5px 10px
  width: 60%
  height: 50px
  min-width: 300px
  border: none
  color: #fff
  background: rgba(255,255,255,0.1)
