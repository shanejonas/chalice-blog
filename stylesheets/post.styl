.PostView
  width 100%
  display block

  article
    max-width 840px
    min-height 240px
    padding 20px 40px 40px 10%
    margin 0 auto
    color #fff
    position relative
    border-bottom 1px solid rgba(255,255,255,0.05)
    video
      max-width: 100%

    &:before
      content '\f0f6'
      font-family 'icon'
      font-size 200px
      line-height 100%
      font-weight normal
      position absolute
      display block
      top 20px
      left 0
      color rgba(255,255,255,0.1)
      z-index 700

    &.video
      &:before
        content '\f008'
        font-size 138px

    &.image
      &:before
        content '\f083'
        font-size 144px

    &.page
      &:before
        content '\f097'

    h1
    a
      text-decoration none
    .pubDate
      font-size 12px
      font-weight 300
      letter-spacing 1px
      line-height 100%
      color rgba(255,255,255,0.5)
      display block
      margin 0 0 30px 0
      text-transform uppercase
      -webkit-transition all 0.25s
    img
      padding 3px
      background #000
      border 1px solid rgba(255,255,255,0.1)

.PostView article a h1,
.PostView article a:visited h1,
.PostView article a:active h1, 
.PostView article h1 a,
.PostView article h1 a:visited,
.PostView article h1 a:active
  font-size 38px
  line-height 150%
  color #e7baff
  z-index 800
  position relative
