@import 'nib'

.NavBarView
  backface-visibility: hidden
  top: 0
  left: 0
  position: fixed
  height: 44px
  width: 100%
  background: #422c4e
  padding: 5px 20px 5px 34px
  overflow: hidden
  z-index: 9999

  nav > a
    width: auto
    color: #fff
    font-size: 12px
    font-weight: 600
    text-transform: uppercase
    text-decoration: none
    display: inline-block
    position: relative
    height: 88px
    margin: 0 3px 0
    transform: translate3d(0,0,0)
    backface-visibility: hidden
    perspective: 1000

    span
      display: block
      padding: 10px
      height: 100%
      position: relative
      transform: translate3d(0,0,0)
      transition: transform 0.25s

      &:after
        content: attr(data-title)
        bottom: 0
        left: 0
        position: absolute
        width: 100%
        height: 50%
        display: block
        color: #e7baff
        padding: 10px

    &:hover
      span
        transform: translate3d(0,-50%,0)

    &.home
      &:before
        content: '\f015'
        font-family: 'icon'
        font-weight: 300
        position: absolute
        top: 6px
        left: -18px
        font-size: 18px
